# GitHub Issue Agent Intelligent Dispatcher Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# GitHub Integration (Required)
# ================================
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ================================
# LLM Provider Configuration
# Choose ONE of the following providers
# ================================

# Option 1: Azure OpenAI (Recommended)
LLM_PROVIDER=azure_openai
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Option 2: OpenAI
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here

# ================================
# LLM Model Configuration
# ================================
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.3

# ================================
# Image Analysis (Optional)
# ================================
ENABLE_IMAGE_ANALYSIS=true
AZURE_COMPUTER_VISION_ENDPOINT=https://your-cv-endpoint.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_computer_vision_key_here

# ================================
# RAG Configuration (Optional)
# ================================
ENABLE_RAG_ANALYSIS=true
# Vector DB path is relative to the analyzer-core directory
# Default: ../chroma_db

# ================================
# Webhook Server Configuration
# ================================
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5000
DEBUG=false

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/intelligent_dispatcher.log

# ================================
# Feature Flags
# ================================
ENABLE_INTENT_ANALYSIS=true
ENABLE_REGRESSION_ANALYSIS=true
ENABLE_CONVERSATION_ANALYSIS=true
ENABLE_TEMPLATE_GENERATION=true

# ================================
# Processing Configuration
# ================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
ENABLE_ASYNC_PROCESSING=true

# ================================
# Docker Compose Configuration
# ================================
# Uncomment if using Docker Compose
# COMPOSE_PROJECT_NAME=github-issue-agent
# COMPOSE_FILE=docker-compose.yml
